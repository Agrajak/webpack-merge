{
  "name": "webpack-merge",
  "description": "Variant of merge that's useful for webpack configuration",
  "author": "Juho Vepsalainen <bebraw@gmail.com>",
  "version": "4.2.1",
  "scripts": {
    "build": "babel src -d lib",
    "watch": "npm-watch",
    "lint": "tslint --format stylish --project .",
    "test": "mocha tests/test-*",
    "test:coverage": "istanbul cover node_modules/.bin/_mocha tests/test-*",
    "tsc": "tsc",
    "precommit": "lint-staged",
    "prepublishOnly": "tsc -d",
    "preversion": "npm run lint && npm run build && npm test && git commit --allow-empty -am \"Update lib\""
  },
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "dependencies": {
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@types/jest": "^23.3.11",
    "@types/lodash": "^4.14.119",
    "@types/webpack": "^4.4.22",
    "copy-webpack-plugin": "^4.6.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.2.2",
    "webpack": "^4.28.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/survivejs/webpack-merge.git"
  },
  "homepage": "https://github.com/survivejs/webpack-merge",
  "bugs": {
    "url": "https://github.com/survivejs/webpack-merge/issues"
  },
  "keywords": [
    "webpack",
    "merge"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{ts}": [
      "npm run lint -- --fix",
      "git add"
    ],
    "*.{ts,json,md}": [
      "prettier --write",
      "git add"
    ],
    "package.json": "check-yarn-lock"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run build && npm run test"
    }
  }
}
